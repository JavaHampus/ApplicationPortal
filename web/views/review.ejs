  <body>
    <%- include('./css/style'); %>
    <div>
        <%- include('./css/review'); %>

      <div class="view-container">
        <div class="view-container1">
          <div class="view-container2">
            <div class="view-container3">
              <div class="view-container4">
                <img
                  alt="image"
                  src="https://cdn.discordapp.com/attachments/1160957812256551035/1167949604294246400/EiQErYzX0AEyVfJ.jpg?ex=654ffcd5&amp;is=653d87d5&amp;hm=2769abf189a312b032e8e8672935d7c8bc2a0dc072448eaced45ce9ce97c7e60&amp;"
                  class="view-image"
                />
                <div class="view-container5">
                  <h1 class="view-text">
                    <span><%= user.username %></span>
                    <br />
                  </h1>
                  <span class="view-text3">Application Reviewer</span>
                </div>
              </div>
              <div class="view-container6">
                <div class="view-container7">
                  <style>
                    table {
                      font-family: 'Trebuchet MS', sans-serif;
                      margin-top: 40px;
                      width: 100%;
                      color: #C6D3E3;
                      border-collapse: collapse;
                    }

                    th {
                      text-align: left;
                      padding-top: 12px;
                      padding-left: 12px;
                      padding-bottom: 12px;
                      background-color: #223046;
                      color: #fff;
                    }

                    tr:nth-child(even){background-color: #5874a1}

                    tr {
                    background-color: #223046;
                    }

                    td {
                        padding-top: 12px;
                      padding-left: 12px;
                      padding-bottom: 12px;
                    }
                    
                  </style>

                  <table>
                    <tbody>
                      <tr>
                        <th>User ID</th>
                        <th>Application Status</th>
                        <th>Application Actions</th>
                      </tr>
                      <% for (let i = 0; i < applications.length; i++) { %>
                        <tr>
                            <td><%= applications[i].author %></td>
                            <td><%= applications[i].status %></td>
                            <td>
                              <a href="/review/view/<%= applications[i].applicationId %>">View</a>
                              |
                              <a href="" class="accept" data-id="<%= applications[i].applicationId %>">Accept</a>
                              |
                              <a href="" class="deny" data-id="<%= applications[i].applicationId %>">Deny</a>
                            </td>
                        </tr>
                    <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
        $(".accept").click(function() {
            $.ajax({
                url: "/review/accept/" + $(this).attr("data-id"),
                method: "POST",
            });
        })

        $(".deny").click(function() {
            $.ajax({
                url: "/review/deny/" + $(this).attr("data-id"),
                method: "POST",
            });
        })
    </script>
  </body>
